{
  "name": "backend",
  "version": "1.0.0",
  "description": "Thullo backend",
  "main": "build/index.js",
  "author": "jcbbb",
  "license": "MIT",
  "scripts": {
    "production-server": "cross-env NODE_ENV=production node build/index.js",
    "development-server": "cross-env NODE_ENV=development tsnd --respawn --transpile-only ./src/index.ts",
    "build": "tsc",
    "client": "yarn --cwd ../client run start",
    "test": "cross-env NODE_ENV=test jest",
    "production-app": "cross-env NODE_ENV=production concurrently \"yarn client\" \"yarn production-server\"",
    "development-app": "cross-env NODE_ENV=development concurrently \"yarn client\" \"yarn development-server\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.11.10",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3"
  }
}
