{
  "name": "backend",
  "version": "1.0.0",
  "description": "Thullo backend",
  "main": "build/index.js",
  "author": "jcbbb",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/index.js",
    "start:dev": "cross-env NODE_ENV=development tsnd --trace-warnings --respawn --transpile-only ./src/index.ts",
    "build": "tsc",
    "client": "yarn --cwd ../client run start",
    "test": "cross-env NODE_ENV=test jest",
    "start:prod-app": "cross-env NODE_ENV=production concurrently \"yarn client\" \"yarn start\"",
    "start:dev-app": "cross-env NODE_ENV=development concurrently \"yarn client\" \"yarn development-server\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.3.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "handlebars": "^4.7.6",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9",
    "nodemailer": "^6.4.14",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.11.10",
    "@types/nodemailer": "^6.4.0",
    "@types/redis": "^2.8.28",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "ts-node-dev": "^1.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "pretty-quick --staged"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "endOfLine": "lf",
    "tabWidth": 2
  }
}
